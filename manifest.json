{
  "manifest_version": 2,
  "name": "pokedle-assistant",
  "version": "1.0",

  "description": "An extension to provide context relvant information based on your current Pokedle game.",

  "background": {
    "scripts": ["background.js"]
  },

  "sidebar_action": {
    "default_title" : "Pokedle Assistant",
    "default_panel": "sidebar/panel.html"
  },

  "permissions": ["storage", "tabs"],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }
}
